<h3>Search for a flight</h3>
<%= form_with(url: '/flights', method: :get, local: true) do |f| %>
  <div class = "search_form">
    <div>
      <div>
        <%=f.label :from_airport%>
        <%=f.select(:from_airport_id, options_for_select(@airports)) %><br>
      </div>
      <div>
        <%=f.label :to_airport_id%>
        <%=f.select(:to_airport_id, options_for_select(@airports)) %><br>
      </div>
      <div>
        <%= f.label 'passengers'%>
        <%= f.select(:num_passengers, options_for_select([1,2,3,4,5,6]))%><br>
      </div>
    </div>
    <div>
      <div>
        <%= f.label :month%>
        <%= f.select(:month,options_for_select(@months))%> <br>
      </div>
      <div>
        <%= f.label :day%>
        <%= f.select(:day,options_for_select(@days))%> <br>
      </div>
      <%= f.label :year%>
      <%= f.select(:year,options_for_select([2020,2021,2022]))%> <br>
    </div>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Search" %>
  </div>
<%end%>
